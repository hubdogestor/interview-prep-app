generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ========================================
// USER - identidade basica para multiuser
// ========================================
model User {
  id               String            @id @default(auto()) @map("_id") @db.ObjectId
  email            String            @unique
  name             String?
  emailVerified    DateTime?
  profiles         Profile[]
  icebreakers      Icebreaker[]
  competencias     Competencia[]
  experiencias     Experiencia[]
  speeches         Speech[]
  questions        Question[]
  practiceSessions PracticeSession[]
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt

  @@map("users")
}

// ========================================
// PROFILE - dados principais do usuario
// ========================================
model Profile {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  nome            String
  titulo          String
  foto            String?
  email           String?
  telefone        String?
  linkedin        String?
  github          String?
  resumo          Json
  anosExperiencia Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  userId          String?  @db.ObjectId
  user            User?    @relation(fields: [userId], references: [id])

  @@map("profile")
}

// ========================================
// ICEBREAKER - apresentacoes curtas
// ========================================
model Icebreaker {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  tipo      String
  titulo    String
  versoes   Json[]
  favorite  Boolean  @default(false)
  archived  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String?  @db.ObjectId
  user      User?    @relation(fields: [userId], references: [id])

  @@map("icebreakers")
}

// ========================================
// COMPETENCIA - habilidades tecnicas
// ========================================
model Competencia {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  nome        String
  categoria   String
  nivel       String
  descricao   Json
  ferramentas String[]
  evidencias  String[]
  trackRecord Json[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String?  @db.ObjectId
  user        User?    @relation(fields: [userId], references: [id])

  @@map("competencias")
}

// ========================================
// EXPERIENCIA - historico profissional
// ========================================
model Experiencia {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  empresa        String
  cargo          String
  periodo        Json
  pitchElevator  Json
  speechCompleto Json
  starCases      Json[]
  tecnologias    String[]
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  userId         String?  @db.ObjectId
  user           User?    @relation(fields: [userId], references: [id])

  @@map("experiencias")
}

// ========================================
// SPEECH - discursos detalhados
// ========================================
model Speech {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  tipoVaga        String
  titulo          String
  versao          String
  conteudo        Json
  duracaoEstimada Int
  foco            String[]
  favorite        Boolean  @default(false)
  archived        Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  userId          String?  @db.ObjectId
  user            User?    @relation(fields: [userId], references: [id])

  @@map("speeches")
}

// ========================================
// QUESTION - perguntas para entrevistadores
// ========================================
model Question {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  categoria  String
  pergunta   Json
  contexto   String?
  prioridade String
  favorite   Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  userId     String?  @db.ObjectId
  user       User?    @relation(fields: [userId], references: [id])

  @@map("questions")
}

// ========================================
// PRACTICE SESSION - historico de praticas
// ========================================
model PracticeSession {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  tipo            String
  itemId          String
  itemTitle       String
  duracao         Int
  transcricao     String?
  audioUrl        String?
  avaliacaoIA     Json?
  notas           String?
  score           Int?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  userId          String?  @db.ObjectId
  user            User?    @relation(fields: [userId], references: [id])

  @@map("practice_sessions")
}
